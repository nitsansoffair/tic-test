<div class="board">
    <table border>
        {% for row in grid %}
            <tr>
                {% for cell in row %}
                    <td width={{ size }} height={{ size }} style="color: {{ cell | lower == 'x' ? 'red' : 'blue' }}"><center>&nbsp; {{ cell }}&nbsp; </center></td>
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
</div>